<form method="post" action="{{ path('delete_category', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn-tertiary full-width">
        {% if icon is defined and icon %}
            <i class="fa-solid fa-trash"></i>
        {% else %}
            Delete
        {% endif %}
    </button>
</form>
