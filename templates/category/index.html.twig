{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container small-container">
        <a class="underline-hover" href="{{ path('admin') }}">
            <i class="fa-solid fa-chevron-left"></i>
            Admin
        </a>

        <h1>Categories</h1>

        <a class="underline-hover" href="{{ path('new_category') }}">
            <i class="fa-solid fa-circle-plus"></i>    
            New category
        </a>

        <ul>
            {% for category in categories %}
                    <li class="btn-primary" style="background-color: {{ category.color ? category.color : 'var(--red)' }}">
                    <a href="{{ path('edit_category', {'id': category.id})}}">
                        {{ category.name }}
                    </a>
                </li>

            {% else %}
                    <li>No category found</li>
            {% endfor %}
        </ul>
    </div>
    {% endblock %}
